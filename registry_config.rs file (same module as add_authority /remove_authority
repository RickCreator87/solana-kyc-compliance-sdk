use anchor_lang::prelude::*;
use crate::state::registry_config::*;
use crate::error::CustomError;

#[derive(Accounts)]
pub struct TransferSuperAdmin<'info> {
    #[account(mut, has_one = super_admin)]
    pub registry_config: Account<'info, RegistryConfig>,

    #[account(mut)]
    pub super_admin: Signer<'info>,
}

pub fn transfer_super_admin(ctx: Context<TransferSuperAdmin>, new_super_admin: Pubkey) -> Result<()> {
    let config = &mut ctx.accounts.registry_config;

    require!(
        config.super_admin == ctx.accounts.super_admin.key(),
        CustomError::NotAuthorized
    );

    config.super_admin = new_super_admin;

    // optional: ensure the new super admin is also in the authorities list
    if !config.authorities.contains(&new_super_admin) {
        config.authorities.push(new_super_admin);
    }

    msg!("ğŸ‘‘ Super admin ownership transferred to {}", new_super_admin);

    Ok(())
}
