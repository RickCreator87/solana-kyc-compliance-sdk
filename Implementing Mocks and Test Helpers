  #   runs-on: ubuntu-latest
  #   if: github.ref == 'refs/heads/main' # Only deploy from main
  #   needs: [test-sdk, test-program] # Wait for tests to pass
  #   steps:
  #     - uses: actions/checkout@v3
  #     - uses: actions/setup-node@v3
  #       with:
        # ...
    # - name: Publish to npm
    #   run: |
    #     npm publish
